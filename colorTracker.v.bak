module colorTracker (
    input wire clk,
    input wire [3:0] SW,
    input wire [7:0] R,
    input wire [7:0] G,
    input wire [7:0] B,
    input wire [9:0] x, // posição x do pixel
    input wire [9:0] y, // posição y do pixel
    output reg [3:0] verde_detectado
);

parameter WIDTH = 640;
parameter HEIGHT = 480;
parameter REGION_WIDTH = WIDTH / 4;

always @(posedge clk) begin
    if (!SW[0]) begin
        verde_detectado <= 4'b0000;
    end else begin
        if ((G_out - R_out) > 80 && (G_out - B_out) > 80 && (G_out > 99 && G_out < 256)) begin // Critério de detecção de verde
            if (x < REGION_WIDTH) begin
                verde_detectado[0] <= 1; //vermelho
            end else if (x < 2 * REGION_WIDTH && x > REGION_WIDTH) begin
                verde_detectado[1] <= 1; //verde
            end else if (x < 3 * REGION_WIDTH && x > 2 * REGION_WIDTH) begin
                verde_detectado[2] <= 1; // azul
            end else if (x < 4 * REGION_WIDTH && x > 3 * REGION_WIDTH) begin
                verde_detectado[3] <= 1; //amarelo 
            end
        end else verde_detectado <= 4'b0000;
    end
end

endmodule
